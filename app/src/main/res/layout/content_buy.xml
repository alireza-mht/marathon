<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alireza.marathon.Activiity.BuyActivity"
    android:background="#fdfdfe"
    tools:showIn="@layout/app_bar_buy">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:src="@drawable/qr_code"
        android:layout_weight="0.75"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        >

        <Button
            android:id="@+id/btn_cancel_buy"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="لغو"
            android:textColor="#fff"
            android:background="@color/darkBlue"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btn_makeqr_buy"
            android:layout_marginLeft="5dp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="ساخت QR Code جدید"
            android:textColor="#fff"
            android:background="@color/darkBlue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/btn_succes_buy"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:text="خرید انجام شد"/>
    </LinearLayout>
</LinearLayout>