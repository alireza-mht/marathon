<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alireza.marathon">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity android:name=".Activiity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activiity.LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustPan"
            />
        <activity android:name=".Activiity.PayActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".Activiity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activiity.SignupActiviy"/>
        <activity android:name=".Activiity.BuyActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>


</manifest>